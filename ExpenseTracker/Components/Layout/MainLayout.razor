@inherits LayoutComponentBase
@using ExpenseTracker.Services
@inject AuthenticationStateService authStateService
   
<div class="page">
    @if (authStateService.IsAuthenticated())
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }
    <main>
        @if (authStateService.IsAuthenticated())
        {
            <div class="top-row px-4">
                <button class="account">
                    <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" aria-label="account"  Style="width:32px; height:32px;" />Account
                </button>
            </div>
        }
        <article>
            @Body
        </article>
    </main>
</div>
   
